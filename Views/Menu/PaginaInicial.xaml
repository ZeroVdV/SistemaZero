<UserControl x:Class="SistemaZero.Views.Menu.PaginaInicial"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SistemaZero.Views.Menu"
             mc:Ignorable="d" 
             xmlns:hc="https://handyorg.github.io/handycontrol">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Logo -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Logo -->
        <Grid Margin="20" Grid.Row="0" HorizontalAlignment="Center" Width="150">
            <Image Source="pack://application:,,,/Views/Imagens/Logo.png"
                   SnapsToDevicePixels="True"
UseLayoutRounding="True"
RenderOptions.BitmapScalingMode="HighQuality"/>
        </Grid>

        <!-- Botões -->
        <hc:UniformSpacingPanel x:Name="PainelInicial" Grid.Row="1" Margin="20" HorizontalAlignment="Center"
                        ChildWrapping="Wrap" ItemWidth="300" ItemHeight="150" Spacing="20">

            <Button x:Name="PagAddProd" Click="PagAddProd_Click" Height="150" 
            Background="Transparent" BorderThickness="0" Padding="0" Cursor="Hand">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Image Source="pack://application:,,,/Views/Imagens/AddFile.png" 
                   Width="80" Height="80" 
                   SnapsToDevicePixels="True" 
                   UseLayoutRounding="True" 
                   RenderOptions.BitmapScalingMode="HighQuality"/>
                    <TextBlock Text="Adicionar Produto" 
                       HorizontalAlignment="Center" 
                       Margin="0,8,0,0" 
                       FontSize="16" 
                       FontWeight="SemiBold"/>
                </StackPanel>
            </Button>

            <Button x:Name="PagListProd" Click="PagListProd_Click" Height="150" 
            Background="Transparent" BorderThickness="0" Padding="0" Cursor="Hand">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Image Source="pack://application:,,,/Views/Imagens/ListFile.png" 
                   Width="80" Height="80" 
                   SnapsToDevicePixels="True" 
                   UseLayoutRounding="True" 
                   RenderOptions.BitmapScalingMode="HighQuality"/>
                    <TextBlock Text="Listar Produtos" 
                       HorizontalAlignment="Center" 
                       Margin="0,8,0,0" 
                       FontSize="16" 
                       FontWeight="SemiBold"/>
                </StackPanel>
            </Button>

            <Button x:Name="PagAddUser" Click="PagAddUser_Click" Height="150" 
            Background="Transparent" BorderThickness="0" Padding="0" Cursor="Hand">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Image Source="pack://application:,,,/Views/Imagens/AddUser.png" 
                   Width="80" Height="80" 
                   SnapsToDevicePixels="True" 
                   UseLayoutRounding="True" 
                   RenderOptions.BitmapScalingMode="HighQuality"/>
                    <TextBlock Text="Inserir usuários (adm)" 
                       HorizontalAlignment="Center" 
                       Margin="0,8,0,0" 
                       FontSize="16" 
                       FontWeight="SemiBold"/>
                </StackPanel>
            </Button>

            <Button x:Name="PagListUser" Click="PagListUser_Click" Height="150" 
            Background="Transparent" BorderThickness="0" Padding="0" Cursor="Hand">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Image Source="pack://application:,,,/Views/Imagens/ListUser.png" 
                   Width="80" Height="80" 
                   SnapsToDevicePixels="True" 
                   UseLayoutRounding="True" 
                   RenderOptions.BitmapScalingMode="HighQuality"/>
                    <TextBlock Text="Listar usuários (adm)" 
                       HorizontalAlignment="Center" 
                       Margin="0,8,0,0" 
                       FontSize="16" 
                       FontWeight="SemiBold"/>
                </StackPanel>
            </Button>

            <Button x:Name="PagListLog" Click="PagListLog_Click" Height="150" 
            Background="Transparent" BorderThickness="0" Padding="0" Cursor="Hand">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Image Source="pack://application:,,,/Views/Imagens/ListLog.png" 
                   Width="80" Height="80" 
                   SnapsToDevicePixels="True" 
                   UseLayoutRounding="True" 
                   RenderOptions.BitmapScalingMode="HighQuality"/>
                    <TextBlock Text="Listar logs (adm)" 
                       HorizontalAlignment="Center" 
                       Margin="0,8,0,0" 
                       FontSize="16" 
                       FontWeight="SemiBold"/>
                </StackPanel>
            </Button>

            <Button Height="150" Background="Transparent" BorderThickness="0" Padding="0" Cursor="Hand">
                <TextBlock Text="Mais conteúdo futuro" 
                           HorizontalAlignment="Center" 
                           Margin="0,8,0,0" 
                           FontSize="16" 
                           FontWeight="SemiBold"/>
            </Button>
            <Button Height="150" Background="Transparent" BorderThickness="0" Padding="0" Cursor="Hand">
                <TextBlock Text="Mais conteúdo futuro" 
                           HorizontalAlignment="Center" 
                           Margin="0,8,0,0" 
                           FontSize="16" 
                           FontWeight="SemiBold"/>
            </Button>
            <Button Height="150" Background="Transparent" BorderThickness="0" Padding="0" Cursor="Hand">
                <TextBlock Text="Mais conteúdo futuro" 
                           HorizontalAlignment="Center" 
                           Margin="0,8,0,0" 
                           FontSize="16" 
                           FontWeight="SemiBold"/>
            </Button>

        </hc:UniformSpacingPanel>

    </Grid>
</UserControl>
