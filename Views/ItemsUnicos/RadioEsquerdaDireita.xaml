<UserControl x:Class="SistemaZero.Views.ItemsUnicos.RadioEsquerdaDireita"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SistemaZero.Views.ItemsUnicos"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="800">
    <StackPanel VerticalAlignment="Center" Orientation="Vertical">
        <RadioButton Content="Esquerda" x:Name="rbEsquerda" IsChecked="True"
                     Width="80"
                     Style="{StaticResource RadioButtonSameAsButtonDefault}" 
                     GroupName="Direcao"/>

        <RadioButton Content="Direita" x:Name="rbDireita"
                     Width="80"
                     Style="{StaticResource RadioButtonSameAsButtonDefault}" 
                     GroupName="Direcao"/>
    </StackPanel>
</UserControl>
