<Window x:Class="SistemaZero.Views.ItemsReutilizaveis.ConfirmarComSenha"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        Title="Confirmar Ação" Height="240" Width="300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Container para o controle de senha -->
        <ContentControl x:Name="SenhaContainer" />

        <!-- Botões -->
        <Grid Grid.Row="1"  Margin="0 10 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Content="Confirmar" Width="100" 
                       Click="Confirmar_Click"/>
            <Button Content="Cancelar" Width="100" Grid.Column="1"
                       Click="Cancelar_Click"/>
        </Grid>
    </Grid>
</Window>
